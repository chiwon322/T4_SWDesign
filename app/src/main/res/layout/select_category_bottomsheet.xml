<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <CheckBox
            android:id="@+id/design_radio_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/check_state"
            android:button="@android:color/transparent"
            android:padding="16dp"
            android:text="디자인"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />

        <CheckBox
            android:id="@+id/graphic_radio_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/check_state"
            android:button="@android:color/transparent"
            android:padding="16dp"
            android:text="그래픽"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />

        <CheckBox
            android:id="@+id/web_radio_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/check_state"
            android:button="@android:color/transparent"
            android:padding="16dp"
            android:text="웹"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />

        <CheckBox
            android:id="@+id/app_radio_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/check_state"
            android:button="@android:color/transparent"
            android:padding="16dp"
            android:text="어플리케이션"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />

        <CheckBox
            android:id="@+id/server_radio_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/check_state"
            android:button="@android:color/transparent"
            android:padding="16dp"
            android:text="서버"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />

        <CheckBox
            android:id="@+id/db_radio_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/check_state"
            android:button="@android:color/transparent"
            android:padding="16dp"
            android:text="데이터 베이스"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />

    </LinearLayout>

    <Button
        android:id="@+id/bottom_select_bt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="완료"
        android:textSize="24sp"
        />

</LinearLayout>