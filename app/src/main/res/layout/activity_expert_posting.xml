<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ClientPostingActivity"
    >

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/post_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5"
                    android:fontFamily="@font/seoulnamsan_cb"
                    android:maxLines="2"
                    android:text="제목"
                    android:textSize="24sp"
                    />

                <Switch
                    android:id="@+id/matching_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/post_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:fontFamily="@font/seoulnamsan_cb"
                    android:text="category"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/post_visit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:fontFamily="@font/seoulnamsan_cb"
                    android:textAlignment="textEnd"
                    android:textSize="16sp"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/seoulnamsan_cb"
                android:text="금액"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/post_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seoulnamsan_cb"
                android:maxLines="2"
                android:textSize="22sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:background="#000000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/seoulnamsan_cb"
                android:text="지역"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/post_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seoulnamsan_cb"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"

                android:fontFamily="@font/seoulnamsan_cb"
                android:text="희망 제작 기간"
                android:textSize="20sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp"
                >

                <TextView
                    android:id="@+id/post_start_term"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/seoulnamsan_cb"
                    android:hint="시작일"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="0.2"
                    android:background="#000000"
                    />

                <TextView
                    android:id="@+id/post_end_term"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/seoulnamsan_cb"
                    android:hint="종료일"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/seoulnamsan_cb"
                android:text="프로젝트 준비 사항"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/post_prepare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"
                android:fontFamily="@font/seoulnamsan_cb"
                android:maxLines="2"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/seoulnamsan_cb"

                android:text="상세 내용"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/post_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/stroke_design"
                android:fontFamily="@font/seoulnamsan_cb"
                android:padding="12dp"
                android:textSize="18sp"
                />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <Button
        android:id="@+id/post_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:background="#B2F384"
        android:text="연결하기"
        />


</LinearLayout>