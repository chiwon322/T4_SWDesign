<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ClientWritingFirst"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="681dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="관심 분야를 선택해주세요."
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/stroke_design"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            >

            <TextView
                android:id="@+id/first_category_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="상위 카테고리"
                android:textSize="20sp"
                />
        </LinearLayout>
        <HorizontalScrollView
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/scroll_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="필요한 서비스의 제목을\n작성해 주세요."
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/stroke_design"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp"
            >

            <EditText
                android:id="@+id/title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="예)OOO분야를 제작 요청합니다."
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textSize="20sp"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/first_next_bt"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="다음"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>



</LinearLayout>